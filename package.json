{
  "name": "frontendmentor-challenges",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:babel": "func() { { ls \"$1\"/src/app.*; } && npx babel \"$1/src/\" $2 --out-dir \"$1/dist/\" --extensions \".js,.jsx,.ts,.tsx\" || echo No script file; }; func",
    "build:pug": "func() { npx pug --pretty \"$1/src\" --out \"$1/dist\" $2; }; func",
    "build:sass": "func() { npx sass --no-source-map \"$1/src/style.scss:$1/dist/style.css\" $2; }; func",

    "live-server": "func() { npx live-server --watch=\"$1/dist\" --open=\"$1/dist\"; }; func",

    "prepare-challenge": "func() { [ -d \"$1\" ] && { [ -d \"$1/dist\" ] || mkdir \"$1/dist\"; } }; func",

    "build-challenge": "func() { npm-run-all \"prepare-challenge -- $1\" --parallel \"build:* -- $1\"; }; func",
    "watch-challenge": "func() { npm-run-all \"prepare-challenge -- $1\" --parallel \"build:* -- $1 --watch\" \"live-server -- $1\"; }; func"
  },
  "author": "kucherovvv97@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.55.0"
  }
}
