doctype html
html(lang="en")
    head
        title Product preview card component
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@700&family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
        link(rel="stylesheet" href="style.css")
    body 
        main.container 
            .card 
                picture.card__image-container
                    source(srcset='assets/image-product-mobile.jpg' media='(max-width: 37.5em)')
                    img.card__image(src='assets/image-product-desktop.jpg')
                .card__content
                    h2.card__category-name Perfume
                    h1.card__product-name Gabrielle Essence Eau De Parfum
                    p.card__description.
                        A floral, solar and voluptuous interpretation composed by Olivier Polge, 
                        Perfumer-Creator for the House of CHANEL.
                    .card__prices
                        .card__price $149.99
                        .card__price-full $169.99
                    button.btn.card__add-to-cart
                        img.btn__icon(src='assets/icon-cart.svg')
                        | Add to Cart
                
            .attribution.
                Challenge by #[a(href='https://www.frontendmentor.io?ref=challenge' target='_blank') Frontend Mentor]. 
                Coded by #[a(href='https://www.frontendmentor.io/profile/kucherovvv') Vladimir Kucherov].
        script(src="app.js")