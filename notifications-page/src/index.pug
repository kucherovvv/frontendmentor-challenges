doctype html
html(lang="en")
    head
        title notification
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="style.css")
    body 
        include _data

        main
            .notifications
                .notifications__header
                    h1.notifications__heading Notifications
                    #unreadCount.notifications__badge= notifs.filter(notif => notif.unread).length
                    #markAllAsRead.btn.btn-muted Mark all as read
                .notifications__list
                    each notif in notifs
                        .notification.notifications__list-item(class={ notification_unread: notif.unread })
                            img.notification__avatar(src=`assets/images/avatar-${notif.username.toLowerCase().split(' ').join('-')}.webp`)
                            .notification__content 
                                if notif.pic 
                                    img.notification__pic(src=`assets/images/${notif.pic}`)
                                .notification__text-container #[a.notification__username=notif.username] #[span.notification__text!=notif.text]
                                .notification__time=notif.time
                                if notif.details 
                                    .notification__details=notif.details

        .attribution.
            Challenge by #[a(href='https://www.frontendmentor.io?ref=challenge' target='_blank') Frontend Mentor]. 
            Coded by #[a(href='https://github.com/kucherovvv') Vladimir Kucherov].
        script(src="app.js")